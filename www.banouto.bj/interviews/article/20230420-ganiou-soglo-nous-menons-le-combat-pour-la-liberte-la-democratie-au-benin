<script>
    let navbar = document.getElementById("main-menu");
    let header = document.getElementById("header");
    let navPos = navbar.getBoundingClientRect().top;

    document.addEventListener("scroll", (event) => {
        let scrollPos = window.scrollY;
        if (scrollPos === 0) {
            navbar.classList.remove('sticky');
            header.classList.remove('navbarOffsetMargin');
        } else if (scrollPos > navPos) {
            navbar.classList.add('sticky');
            header.classList.add('navbarOffsetMargin');
        } else {
            navbar.classList.remove('sticky');
            header.classList.remove('navbarOffsetMargin');
        }
    });
</script>
<script type="text/javascript">
    $(document).on("click", ".open-commentModal", function () {
        var myPostId = $(this).data('post');
        var myCommentId = $(this).data('comment');
        $(".modal-body #postId").val(myPostId);
        $(".modal-body #commentId").val(myCommentId);
    });
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('comment-modal-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
